{% import "base.macros.twig" as form %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" href="/favicon.ico">

    <title>shl-wpg.ca</title>

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/datatables.min.css"/>




    <!-- Custom styles for this template -->

    <style>
        body {
            min-height: 2000px;
            padding-top: 50px;
        }
    </style>

    {% block custom_header %}{% endblock %}

</head>

<body>

<!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container col-lg-offset-2">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">SHL<span class="hidden-lg hidden-md hidden-sm"><small>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;looks best in landscape</small></span></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="{{ isActive(active_navbar_stats) }}"><a href="/stats/players">Stats</a></li>
                <li class="{{ isActive(active_navbar_records) }}"><a href="/records">Records</a></li>
                {% if auth_user() %}
                    <li><a href="/admin/game/add">Add Game</a></li>
                    <li><a href="/auth/logout">Logout</a></li>
                {% else %}
                    <li><a href="/auth/login">Login</a></li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8 col-md-12 col-sm-12 col-xs-12">{% block content %}{% endblock %}</div>
    </div>



</div> <!-- /container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="/jquery-3.1.0.min.js"></script>

<script src="/bootstrap/js/bootstrap.min.js"></script>
